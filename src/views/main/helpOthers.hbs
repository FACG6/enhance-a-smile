<main class="container">
    <section class="taps">
        <div class="personal-info">
            <span class="taps-text">Personal Details</span>
        </div>
        <div class="request-info">
            <span class="taps-text">Your Request</span>
        </div>
    </section>

    <section class="personal hide">
        <form class="form">
            <label for="name" class="label">Full Name :</label>
            <input type="text" name="fullName" id="name" class="name input" placeholder="Enter Your Full Name ... "
                required>

            <label for="phone" class="label">Phone Number :</label>
            <input type="text" name="phoneNumber" id="phone" class="number input"
                placeholder="Enter Your Phone Number ... " required>

            <label for="email" class="label">Email :</label>
            <input type="email" name="email" id="email" class="email input" placeholder="Enter Your Email ... "
                required>

            <input type="button" class="next button" value="Next">
        </form>
    </section>

    <section class="request ">
        <form class="form">
            <span class="instructions">Please fill out the following form to provide us information about the people you
                are requesting for.</span>

            <label for="number" class="label">Number Of People Requested for</label>
            <input type="number" name="numberOfClothes" id="number" class="numberOfClothes input"
                placeholder="Enter Number Of Pieces  ... " required>

            <label for="location" class="label">Location of people requested for :</label>
            <input type="text" name="location" id="location" class="location input" placeholder="Enter Location  ... "
                required>

            <label for="phone-number" class="label">Phone No. of an indivisual Benefiting from this service (optional)
                :</label>
            <input type="text" name="phone-number" id="phone-number" class="phone-number input"
                placeholder="Enter Phone Number  ... " required>

            <label for="description" class="label">Add some more description (optional) :</label>
            <textarea name="description" id="description" class="description input" cols="30" rows="10"
                placeholder="Enter Description"></textarea>
            <input type="button" class="submit button" value="Done">
        </form>
    </section>
    <section class="popUpBack hide">
        <div class="popUp ">
            <p class="mainParagraph">Thank you for your generosity, we appreciate what you have done today</p>
            <input type="button" value="Back To Home" class="back">
            <p class="secondryParagraph">By using our service you push us a step forward to achieving our vision</p>
        </div>
    </section>
</main>