<main class="main">
  <section class="nav--form">
    <div class="nav--form-personalDetails">
      <h2 class="text--taps">Personal Details</h2>
    </div>
    <div class="nav--form-yourRequest">
      <h2 class="text--taps">Your Request</h2>
    </div>
  </section>
  <section class="pesonal--section">
    <form class="personal--details">
      <label for="full--name" class="label">Full Name :</label>
      <input type="text" placeholder="Enter Your Full Name ... " id="full--name" class="full--name-form input"
        name="fullName" required /><span class="full--name-span validMsg"></span>

      <label for="phone--number" class="label">Phone Number :</label>
      <input type="text" placeholder="Enter Your Phone Nmuber ... " id="phone--number" class="phone--number-form input"
        name="phoneNumber" required /><span class="phone--number-span validMsg"></span>

      <label for="city--name" class="label">City Name :</label>
      <input type="text" placeholder="Enter Your City Name ... " id="city--name" class="city--nam-form input"
        name="cityName" required /><span class="city--name-span validMsg"></span>

      <label for="street--name" class="label">Street Name :</label>
      <input type="text" placeholder="Enter Your City Name ... " id="street--name" class="street--name-form input"
        name="streetName" required /> <span class="street--name-span validMsg"></span>
      <input type="button" name="Next" value="Next" id="next--button" class="next--button" required />
    </form>
  </section>
  <section class="request--section hide">
    <form class="your--request ">
      <div class="number--of-pieces">
        <label for="number--of-pieces" class="label">Number of pieces :</label>
        <input type="number" placeholder="Enter number of pieces ... " id="number--of-pieces"
          class="number--of-pieces input" name="numberOfPieces" required />
      </div>
      <div>
        <label for="gender" class="label">Gender :</label>
        <div class="gender--check-box">
          <div>
            <input type="checkbox" name="women" class="gender" id="women" />
            <lable for="women">Women</lable>
          </div>
          <div>
            <input type="checkbox" name="men" class="gender" id="men" />
            <lable for="men">Men</lable>
          </div>
          <div>
            <input type="checkbox" name="kids" class="gender" id="kids" />
            <label for="kids">Kids</label>
          </div>
        </div>
      </div>
      <div>
        <div>
          <label for="season" class="label">Season :</label>
          <div class="season--check-box">
            <div>
              <input type="checkbox" name="winter" class="season" id="winter" /><label for="winter">Winter</label>
            </div>
            <div>
              <input type="checkbox" name="summer" class="season" id="summer" /><label for="summer">Summer</label>
            </div>
            <div>
              <input type="checkbox" name="spring" class="season" id="spring" /><label for="spring">Spring</label>
            </div>
            <div>
              <input type="checkbox" name="autumn" class="season" id="autumn" value="autumn" />
              <label for="autumn">Autumn</label> </div>
          </div>
        </div>
      </div>
      <div class="description--container">
        <label for="description" class="label">Description <span class="optional">(opthional)</span> :</label>
        <textarea name="descrption" placeholder="Enter description about your request"
          class="description input"></textarea>
        <span class="valid--msg-span validMsg"></span>
      </div>
      <input type="submit" name="submit" value="submit" class="request--submit" id="request--submit" />
    </form>
  </section>
  <section class="popUpBack hide">
    <div class="popUp ">
      <p class="mainParagraph">Thank you for your request, we will look at what you request today</p>
      <input type="button" value="Back To Home" class="back">
      <p class="secondryParagraph">By using our service you push us a step forward to achieving our vision</p>
    </div>
  </section>