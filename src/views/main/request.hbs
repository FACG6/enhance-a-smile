<main>
  <section class="nav--form">
    <div class="nav--form--sections">Personal Details</div>
    <div class="nav--form--sections">Your Request</div>
  </section>
  <section class="personal--details">
    <form>
      <label for="full--name" class="personal--details--label">Full Name :</label>
      <input
        type="text"
        placeholder="Enter Your Full Name ... "
        id="full--name"
        class="full--name--form input"
      />

      <label for="phone--number" class="personal--details--label">Phone Number :</label>
      <input
        type="text"
        placeholder="Enter Your Phone Nmuber ... "
        id="phone--number"
        class="phone--number--form input"
      />

      <label for="city--name" class="personal--details--label">City Name :</label>
      <input
        type="text"
        placeholder="Enter Your City Name ... "
        id="city--name"
        class="city--nam--form input"
      />

      <label for="street--name" class="personal--details--label">Street Name :</label>
      <input
        type="text"
        placeholder="Enter Your City Name ... "
        id="street--name"
        class="street--name--form input"
      />
      <input
        type="button"
        name="Next"
        value="Next"
        id="next--button"
        class="next--button"
      />
    </form>
  </section>
  <section class="your--request">
    <form>
      <label for="number--of--pieces" class="your--request--label">Number of pieces :</label>
      <input
        type="text"
        placeholder="Enter number of pieces ... "
        id="number--of--pieces"
        class="number--of--pieces input"
      />
      <div>
        <label for="gender">Gender :</label>
        <input type="checkbox" name="genderWomen" class="gender" />Women
        <input type="checkbox" name="genderMen" class="gender" />Men
        <input type="checkbox" name="genderKids" class="gender" />Kids
      </div>
      <div>
          <label for="season">Season :</label>
          <input type="checkbox" name="seasonWinter" class="season" />Winter
          <input type="checkbox" name="seasonSummer" class="season" />Summer
          <input type="checkbox" name="seasonSpring" class="season" />Spring
          <input type="checkbox" name="seasonAutumn" class="season" />Autumn
      </div>
      <div>
          <label for="description">Description <span class="optional">(opthional)</span> :</label >
          <textarea
            name="descrption"
            placeholder="Enter description about your request" ></textarea>
      </div>
      <input
        type="submit"
        name="submit"
        value="submit"
        class="donate--submit"
        id="request--submit"
      />
    </form>
  </section>
</main>
